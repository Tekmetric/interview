{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@tekmetric/database": [
        "libs/database/src"
      ],
      "@tekmetric/database/*": [
        "libs/database/src/*"
      ],
      "@tekmetric/user": [
        "libs/user/src"
      ],
      "@tekmetric/user/*": [
        "libs/user/src/*"
      ],
      "@tekmetric/auth": [
        "libs/auth/src"
      ],
      "@tekmetric/auth/*": [
        "libs/auth/src/*"
      ],
      "@tekmetric/core": [
        "libs/core/src"
      ],
      "@tekmetric/core/*": [
        "libs/core/src/*"
      ],
      "@tekmetric/question": [
        "libs/question/src"
      ],
      "@tekmetric/question/*": [
        "libs/question/src/*"
      ]
    }
  }
}
